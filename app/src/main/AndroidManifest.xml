<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_commerce">

    <uses-permission android:name="android.permission.BROADCAST_CLOSE_SYSTEM_DIALOGS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerce">
        <activity
            android:name="com.google.android.gms.samples.CheckoutActivity"
            android:label="@string/store_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat"
            android:exported="false">
        </activity>

        <activity
            android:name="com.google.android.gms.samples.PaymentTransparentActivity"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:theme="@style/Transparent" />

        <activity
            android:name=".OrderPage"
            android:exported="false" />
        <activity
            android:name=".CoursePage"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service

            android:enabled="true"
            android:name="com.google.android.gms.samples.PaymentNotificationIntentService"
            android:icon="@drawable/googlepay_button_overlay"
            android:label="@string/app_name" />

    </application>

</manifest>